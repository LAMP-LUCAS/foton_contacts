<%# Wraps the form in a fieldset for better grouping and styling %>
<fieldset class="box">
  <legend><%= l(:label_general_settings) %></legend>
  
  <p>
    <%= label_tag 'settings[create_user_contact]', l(:label_contact_create_from_user) %>
    <%= check_box_tag 'settings[create_user_contact]', 1, @settings['create_user_contact'].to_i == 1 %>
    <br>
    <em class="info"><%= l(:text_contact_create_from_user_info) %></em>
  </p>
  
  <p>
    <%= label_tag 'settings[default_visibility]', l(:label_default_visibility) %>
    <%= select_tag 'settings[default_visibility]', 
                   options_for_select([['private', 'private'], ['public', 'public']], 
                   @settings['default_visibility']) %>
  </p>

  <p>
    <%= label_tag 'settings[default_workload_hours]', l(:label_default_workload_hours) %>
    <%= number_field_tag 'settings[default_workload_hours]', @settings['default_workload_hours'], min: 0, max: 24, step: 0.5 %>
    <br>
    <em class="info"><%= l(:text_default_workload_hours_info) %></em>
  </p>
</fieldset>

<fieldset class="box">
  <legend><%= l(:label_feature_activation) %></legend>
  
  <p>
    <%= label_tag 'settings[enable_groups]', l(:label_enable_groups) %>
    <%= check_box_tag 'settings[enable_groups]', 1, @settings['enable_groups'] %>
  </p>
  
  <p>
    <%= label_tag 'settings[enable_issue_links]', l(:label_enable_issue_links) %>
    <%= check_box_tag 'settings[enable_issue_links]', 1, @settings['enable_issue_links'] %>
  </p>
  
  <p>
    <%= label_tag 'settings[enable_custom_fields]', l(:label_enable_custom_fields) %>
    <%= check_box_tag 'settings[enable_custom_fields]', 1, @settings['enable_custom_fields'] %>
  </p>
  
  <p>
    <%= label_tag 'settings[enable_attachments]', l(:label_enable_attachments) %>
    <%= check_box_tag 'settings[enable_attachments]', 1, @settings['enable_attachments'] %>
  </p>
</fieldset>
