<%# app/views/contacts/_contact_employment_fields.html.erb %>
<div class="contact-employment-fields" data-nested-form-target="fields" data-new-record="<%= f.object.new_record? %>">
  <div class="splitcontent">
    <div class="splitcontentleft">
      <p>
        <%= f.label :company_id, l(:field_company) %>
        <%= f.select :company_id,
                      CompanyContactOptionCollection.new(@project).options,
                      { include_blank: l(:label_select_company) },
                      { class: 'select2' } %>
      </p>
      <p>
        <%= f.label :position, l(:field_position) %>
        <%= f.text_field :position, size: 40 %>
      </p>
    </div>
    <div class="splitcontentright">
      <p>
        <%= f.label :start_date, l(:field_start_date) %>
        <%= f.date_field :start_date %>
      </p>
      <p>
        <%= f.label :end_date, l(:field_end_date) %>
        <%= f.date_field :end_date %>
      </p>
    </div>
  </div>
  <%= f.hidden_field :_destroy %>
  <%= button_tag l(:button_delete), type: "button", data: { action: "nested-form#remove" }, class: "icon icon-del" %>
</div>