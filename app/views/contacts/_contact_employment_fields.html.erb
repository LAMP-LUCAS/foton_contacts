<%# app/views/contacts/_contact_employment_fields.html.erb %>
<div class="contact-employment-fields" data-new-record="<%= f.object.new_record? %>">
  <div class="splitcontent">
    <div class="splitcontentleft">
      <p>
        <%= f.label :company_id, l(:field_company) %>
        <%= f.select :company_id,
                     options_for_company_contact(selected: f.object.company_id),
                     { include_blank: l(:label_select_company) },
                     { data: { controller: 'tom-select', 'tom-select-create-value': true } } %>
      </p>
      <p>
        <%= f.label :position %>
        <%= f.text_field :position, size: 40 %>
      </p>
    </div>
    <div class="splitcontentright">
      <p>
        <%= f.label :start_date, l(:field_start_date) %>
        <%= f.date_field :start_date %>
      </p>
      <p>
        <%= f.label :end_date, l(:field_end_date) %>
        <%= f.date_field :end_date %>
      </p>
    </div>
  </div>
  <%= f.hidden_field :_destroy %>
  <button type="button" data-action="nested-form#remove" class="icon icon-del"><%= l(:button_delete) %></button>
</div>