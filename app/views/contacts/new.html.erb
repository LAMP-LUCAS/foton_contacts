<%# app/views/contacts/_new_form.html.erb %>
<%= turbo_frame_tag "modal" do %>
  <div class="modal-header">
    <h3 class="title"><%= l(:label_new_contact) %></h3>
    <%= link_to "&#10006;".html_safe, close_modal_contacts_path, class: "close", data: { turbo_method: :post, turbo_frame: "_top" } %>
  </div>

  <%= form_for @contact, url: contacts_path, html: { data: { controller: "form", action: "turbo:submit-start->form#disable turbo:submit-end->form#enable" } } do |f| %>
    <%= render partial: 'form', locals: { f: f } %>
    
    <div class="buttons">
      <%= f.submit l(:button_create), data: { "form-target": "submit" } %>
      <%= button_to l(:button_cancel), close_modal_contacts_path, method: :post, class: "button" %>
    </div>
  <% end %>
<% end %>
