<%# app/views/contacts/_phone_fields.html.erb %>
<div class="contact-phone-fields nested-fields">
  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy %>
  <p>
    <%= f.label :phone, l(:field_phone) %>
    <%= f.text_field :phone, size: 30, placeholder: "(99) 99999-9999" %>
    <%= f.check_box :is_primary %> <%= f.label :is_primary, l(:label_primary) %>
    <%= link_to l(:button_remove), '#', class: 'icon icon-del remove_fields' %>
  </p>
</div>